<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <b>Nhien</b>Clothing
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body" style="    padding: 50px 20px;">
      <p class="login-box-msg">Đăng nhập để bắt đầu sử dụng</p>

      <form action="/" method="post" id="loginForm" autocomplete="off" novalidate>
        <div class="form-group has-feedback">
          <input type="email" name="email" id="email" class="form-control" placeholder="Email">
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <input type="password" name="password" id="password" class="form-control" placeholder="Mật khẩu">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-6 col-xs-offset-3">
            <button type="submit" id="btn-login" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
          </div>
          <!-- /.col -->
        </div>
        <div class="row">
          <div class="col-xs-12">
            <p class="red" id="loginErr" style="font-size: 12px; padding-top: 10px;"></p>
          </div>
          <!-- /.col -->
        </div>
        <div class="row" style="    padding-top: 20px;">
          <div class="col-xs-6">
            <a href="#">Quên mật khẩu</a>
            <br>
          </div>
          <!-- /.col -->
        </div>
      </form>



    </div>
    <!-- /.login-box-body -->
  </div>
  <!-- /.login-box -->

  <!-- jQuery 3 -->
  <script src="/jquery/dist/jquery.min.js"></script>
  <!-- Bootstrap 3.3.7 -->
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
  <!-- iCheck -->
  <script src="/assets/plugins/iCheck/icheck.min.js"></script>
  <script src="/assets/js/login-service.js"></script>
  <script src="/assets/js/auth-service.js"></script>
  <script>
    $(function () {
      $('input').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' /* optional */
      });
      handleLoginForm();
    });

    function handleLoginForm() {
      $("#loginForm").submit(function (e) {
        $('#loginErr').html(null);
        const form = this;
        e.preventDefault();
        let data = getFormData($(form));
        $('#bnt-login').attr('disabled', true);
        $('#bnt-login').text('Đang đăng nhập...');

        LoginService.login(data).then(function (d) {
          $('#bnt-login').attr('disabled', false);
          $('#bnt-login').text('Đăng nhập');
          AuthService.saveUser(d);
          if (d.currentUser.role == 'admin') {
            document.location.href = '/product';
          } else {
            document.location.href = '/';
          }
        })
          .catch(err => $('#loginErr').html(err));
      });
    }

    function getFormData($form) {
      var unindexed_array = $form.serializeArray();
      var indexed_array = {};

      $.map(unindexed_array, function (n, i) {
        indexed_array[n['name']] = n['value'];
      });

      return indexed_array;
    }
  </script>
